<div class="container-fluid">
  <div class="row">
    <div class="col-5">
      <h4>ジャンル追加</h4>
      <% if @genre.errors.any? %>
        <p><%= @genre.errors.count %>件のエラーが発生しました</p>
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <div>
          <%= f.label :釣り方 %>
          <%= f.text_field :method, class: "form-control" %>
        </div>
        <div class="form-group row">
          <div class="col-sm-9 offset-sm-3">
            <%= f.submit '追加', class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-7">
      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.method %></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center text-center">
        <%= paginate @genres %>
      </div>
    </div>
  </div>
</div>
