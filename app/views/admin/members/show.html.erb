<div class="container-fluid">
 <div class="row">
  <div class="col">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @member.id %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= @member.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @member.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <% if @member.is_withdrawal == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-secondary">退会</td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<%= form_with model: @member, url: admin_member_path, method: :patch, local: true do |f| %>
        <div class="radio-group">
         <%= f.collection_radio_buttons :is_withdrawal, [[false, "有効"], [true, "退会"]], :first, :last do |b| %>
        <label class="radio-label">
          <%= b.radio_button %> <%= b.label %>
        </label>
         <% end %>
<div class="form-group row mt-4">
  <div class="col-sm-9 offset-sm-3">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
</div>
<% end %>
</div><!-- container -->