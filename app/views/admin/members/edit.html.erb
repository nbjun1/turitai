<div class="container-fluid">
  <div class="row justify-content-center mb-3">
    <div class="col offset-sm-5">
      <div class="radio-group">
        <%= form_with model: @member, url: admin_member_path, method: :patch, local: true do |f| %>
          <div class="radio-group">
            <%= f.collection_radio_buttons :is_withdrawal, [[false, "有効"], [true, "退会"]], :first, :last do |b| %>
              <div class="form-check form-check-inline ml-auto">
              <label class="radio-label">
                <%= b.radio_button %> <%= b.label %>
              </label>
              </div>
            <% end %>
          </div>

          <div class="form-group row mt-4">
            <div class="col-sm-9 offset">
              <%= f.submit "変更を保存", class: "btn btn-danger", data: { confirm: "最終確認" } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

