<div class="container-fluid">
  <%= form_with model: @member, url: admin_member_path, method: :patch, local: true do |f| %>
    <div class="row">
      <label class="col-lg-3">会員ID</label>
      <div class="col-lg-3">
        <%= @member.id %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">ニックネーム</label>
      <div class="col-lg-3">
        <%= f.text_field :family_name, autofocus: true %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :first_name %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">フリガナ</label>
      <div class="col-lg-3">
        <%= f.text_field :family_kana_name %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :first_kana_name %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">郵便番号（ハイフンなし）</label>
      <div class="col-lg-3">
        <%= f.text_field :post_code %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">住所</label>
      <div class="col-lg-3">
        <%= f.text_field :address %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">電話番号（ハイフンなし）</label>
      <div class="col-lg-3">
        <%= f.text_field :phone_number %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">メールアドレス</label>
      <div class="col-lg-3">
        <%= f.text_field :email %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">会員ステータス</label>
      <div class="col-lg-3">
        <div class="radio-group">
          <%= f.collection_radio_buttons :is_withdrawal, [[false, "有効"], [true, "退会"]], :first, :last do |b| %>
            <label class="radio-label">
              <%= b.radio_button %> <%= b.label %>
            </label>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-3"></div>
          <div class="col-lg-9">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
