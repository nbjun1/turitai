<header>
  <nav class="nav navbar-nav navbar-expand-lg bg-white border-bottom navbar-light">
    <div class="container-fluid">
      <!-- 会員がログインしているとき -->
      <div>
        <%= link_to image_tag("turitai.jpg", width: 200, height: 100), "/" %>
      </div>



      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <% if member_signed_in? %>
          <ul class="nav navbar-nav ml-auto">
            <li class="mr-5">
              <%= link_to image_path, class: "nav-link btn btn-dark text-white" do %>
                画像診断
              <% end %>
            </li>
            <li class="mr-5">
              <%= link_to member_mypage_path(current_member), class: "nav-link btn btn-outline-primary text-dark" do %>
                マイページ
              <% end %>
            </li>
            <li class="mr-5">
              <%= link_to root_path, class: "nav-link btn btn-outline-warning text-dark" do %>
                釣果一覧
              <% end %>
            </li>
            <li class="mr-5">
              <%= link_to genre_index_path, class: "nav-link btn btn-outline-success text-dark" do %>
                ジャンル一覧
              <% end %>
            </li>
            <li class="mr-5">
              <%= link_to destroy_member_session_path, method: :delete, class: "nav-link btn btn-outline-danger text-dark" do %>
                ログアウト
              <% end %>
            </li>
          </ul>
          <div>
            <%= render "layouts/keysearch" %>
          </div>
        </div>

        <!-- 管理者がログインしているとき -->
        <% elsif admin_signed_in? %>
          <ul class="nav navbar-nav ml-auto">
            <li class="mr-5">
              <%= link_to root_path, class: "nav-link btn btn-outline-warning text-dark" do %>
                釣果一覧
              <% end %>
            </li>
            <li class="mr-5">
              <%= link_to admin_top_path, class: "nav-link btn btn-outline-info text-dark" do %>
                会員一覧
              <% end %>
            <li class="mr-5">
              <%= link_to admin_genres_path, class: "nav-link btn btn-outline-secondary text-dark" do %>
                ジャンル一覧
              <% end %>
            </li>
            <li class="mr-5">
              <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link btn btn-outline-danger text-dark" do %>
                ログアウト
              <% end %>
            </li>
          </ul>

        <!-- どちらもログインしていないとき -->
        <% else %>
          <ul class="nav navbar-nav ml-auto">
            <li class="mr-5">
              <%= link_to image_path, class: "nav-link btn btn-dark text-white" do %>
                画像診断
              <% end %>
            </li>
            <li class="mr-5">
              <%= link_to about_path, class: "nav-link btn btn-outline-danger text-dark" do %>
                About
              <% end %>
            </li>
            <li class="mr-3">
              <%= link_to "ゲストログイン", member_guest_sign_in_path, class: "btn btn-secondary btn text-white", method: :post %>
            </li>
            <li class="mr-3">
              <%= link_to root_path, class: "nav-link btn btn-outline-warning text-dark" do %>
                釣果一覧
              <% end %>
            </li>
            <li class="mr-3">
              <%= link_to genre_index_path, class: "nav-link btn btn-outline-warning text-dark" do %>
                ジャンル一覧
              <% end %>
            </li>
            <li class="mr-3">
              <%= link_to new_member_registration_path, class: "nav-link btn btn-outline-success text-dark" do %>
                新規登録
              <% end %>
            </li>
            <li class="mr-3">
              <%= link_to new_member_session_path, class: "nav-link btn btn-outline-info text-dark" do %>
                ログイン
              <% end %>
            </li>
          </ul>

          <div>
            <%= render "layouts/keysearch" %>
          </div>

        <% end %>
      </div>
    </div>
  </nav>
</header>
