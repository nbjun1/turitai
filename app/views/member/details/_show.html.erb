<div class="container">
  <% if member_signed_in? || admin_signed_in? %>
    <h4>会員情報</h4>
    <div class="row">
      <div class="col">
        <% if member && member.id %>
          <div>
            <%= link_to member_mypage_path(member) do %>
              <%= image_tag member.get_profile_image %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <table>
          <tbody>
            <tr>
              <td>ニックネーム</td>
            </tr>
            <tr>
              <td class="border border-dark align-middle bg-white"><%= member.name %></td>
            </tr>
            <tr>
              <td>プロフィール</td>
            </tr>
            <tr>
              <td class="border border-dark align-middle bg-white"><%= member.introduction %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>

<% if current_member == @member && member.present? %>
  <% unless member.guest_member? %>
    <div class="m-2">
      <%= link_to "EDIT", member_path(member.id), class: "btn btn-secondary" %>
    </div>
  <% end %>
  <div class="m-2">
    <%= link_to "釣果投稿", member_result_new_path, class: "btn btn-success" %>
  </div>
<% end %>
